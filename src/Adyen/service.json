      "name": "shopper_interaction",
      "plural": "shopper_interactions",
      "values": [
        {
          "name": "Ecommerce",
          "attributes": [],
          "description": "Online transactions where the card holder is present (online). For better authorisation rates, we recommend sending the card security code (CSC) along with the request."
        },
        {
          "name": "ContAuth",
          "attributes": [],
          "description": "Card on file and/or subscription transactions, where the card holder is known to the merchant (returning customer). If the shopper is present (online), you can supply also the CSC to improve authorisation (one-click payment)."
        },
        {
          "name": "POS",
          "attributes": [],
          "description": "Point-of-sale transactions where the shopper is physically present to make a payment using a secure payment terminal."
        },
        {
          "name": "Moto",
          "attributes": [],
          "description": "Mail-order and telephone-order transactions where the shopper is in contact with the merchant via email or telephone."
        }
      ],
